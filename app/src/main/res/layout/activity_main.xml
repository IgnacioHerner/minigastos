<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mini Control de Gastos"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etGasto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gasto 1"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etGasto2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gasto 2"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etGasto3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gasto 3"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: "
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvPromedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promedio: "
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvMayor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gasto mÃ¡s alto: "/>

</LinearLayout>
